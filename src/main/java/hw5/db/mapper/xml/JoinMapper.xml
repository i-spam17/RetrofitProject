<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="db.dao.JoinMapper">
    <resultMap id="SimpleJoinResult" type="dto.response.JsonCategory">
        <id column="category_id" jdbcType="INTEGER" property="id" />
        <result column="title" jdbcType="VARCHAR" property="title" />
        <collection property="details" ofType="examples.joins.OrderDetail">
            <id column="order_id" jdbcType="INTEGER" property="orderId"/>
            <id column="line_number" jdbcType="INTEGER" property="lineNumber"/>
            <result column="description" jdbcType="VARCHAR" property="description"/>
            <result column="quantity" jdbcType="INTEGER" property="quantity"/>
        </collection>
    </resultMap>
</mapper>
